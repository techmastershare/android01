<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
	
    <EditText 
        android:id="@+id/task_name_editText" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:hint="@string/task_hint" 
        android:lines="1" />
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deadline_textView"
            android:layout_marginLeft="5dp"/>
        
        <EditText 
            android:id="@+id/deadline_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint=""/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">
        
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <RadioButton 
                android:id="@+id/working_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/working_radio_button"/>
            
            <RadioButton 
                android:id="@+id/pending_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/pending_radio_button"/>
            
            <RadioButton 
                android:id="@+id/completed_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/completed_radio_button"/>
        </RadioGroup>

    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button 
	        android:id="@+id/add_button" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:gravity="center" 
	        android:text="@string/add_button" />
        
        <Button 
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/delete_button"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <View 
            android:id="@+id/spliter"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="#FF0000"/>
    </LinearLayout>
    
    <ListView 
        android:id="@+id/srlistView" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
    />
</LinearLayout>
