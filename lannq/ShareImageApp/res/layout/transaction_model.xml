<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5" 
    android:layout_marginBottom="5dp"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/transationPhoto_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="Photo Images"
            android:src="@drawable/ic_launcher"
            android:scaleType="fitCenter" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="5dp" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/right_arrow" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center" >

        <ImageView
            android:id="@+id/contactPhoto_imageView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Contact Images"
            android:src="@drawable/ic_launcher" >
        </ImageView>

        <TextView
            android:id="@+id/transactionContactName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact" />
    </LinearLayout>

</LinearLayout>